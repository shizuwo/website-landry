      margin: 2rem auto 0;
      display: block;
      cursor: pointer;
      transition: fill 0.3s ease;
      fill: white;
      stroke: #ff5e5e;
      stroke-width: 2;
    }
    svg:hover {
      fill: #ffb347;
    }
    @media (min-width: 768px) {
      h1 {
        font-size: 2.5rem;
      }
      p {
        font-size: 1.3rem;
      }
      svg {
        max-width: 200px;
      }
    }
    @keyframes gradientBG {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
  </style>
</head>
