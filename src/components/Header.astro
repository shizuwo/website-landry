---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
    </div>
    <div class="social-links">
      <a href="https://landrypf.com/insta" target="_blank" aria-label="Instagram">
        <!-- Icône Instagram SVG simplifiée -->
        <svg viewBox="0 0 24 24" width="24" height="24" fill="currentColor" aria-hidden="true">
          <path d="M7 2C4.243 2 2 4.243 2 7v10c0 2.757 2.243 5 5 5h10c2.757 0 5-2.243 5-5V7c0-2.757-2.243-5-5-5H7zm5 3a4 4 0 1 1 0 8 4 4 0 0 1 0-8zm4.5-.5a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
        </svg>
      </a>
      <a href="https://landrypf.com/discord" target="_blank" aria-label="Discord">
        <!-- Icône Discord SVG simplifiée -->
        <svg viewBox="0 0 24 24" width="24" height="24" fill="currentColor" aria-hidden="true">
          <path d="M20 0H4a4 4 0 0 0-4 4v16a4 4 0 0 0 4 4h12l4-4V4a4 4 0 0 0-4-4zM8 14s-1.5-1.5-1.5-3 1.5-3 1.5-3 1.5 1.5 1.5 3-1.5 3-1.5 3zm8 0s-1.5-1.5-1.5-3 1.5-3 1.5-3 1.5 1.5 1.5 3-1.5 3-1.5 3z"/>
        </svg>
      </a>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }
  h2 a,
  h2 a.active {
    text-decoration: none;
    color: black;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: black;
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    border-bottom-color: var(--accent);
  }
  .social-links,
  .social-links a {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    color: black;
  }
  .social-links a svg {
    display: block;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
